[user]
	name = Delong Fu
	email = delongfu@gmail.com
[core]
	editor = vim
	excludesfile = /Users/mockingbird/.gitignore_global
	autocrlf = input
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%Creset' --abbrev-commit
	cm = commit -m
	po = push origin
	undo = checkout --
	amend = commit --amend
	sync = !git fetch origin $1:$1
[color]
	status = auto
	ui = true
[color "status"]
	changed = red
	untracked = normal
	added = magenta
[color "diff"]
	old = red
	new = magenta
[push]
	default = current
